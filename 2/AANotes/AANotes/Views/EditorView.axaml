<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AANotes.Views.EditorView">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="Auto"/>
		</Grid.ColumnDefinitions>

		<Button Content="Назад" Click="OnBack" Height="30"
				Grid.Row="0" Grid.Column="0"
				Margin="30,15,10,10"/>
		<TextBox x:Name="title" Watermark="Заголовок" Height="30"
				 Grid.Row="0" Grid.Column="1"
				 Margin="10,15,10,10" FontSize="14" CornerRadius="10"
				 Background="#242424" BorderBrush="#0088ff"/>
		<Button Content="Удалить" Click="OnDelete" Height="30"
				Grid.Row="0" Grid.Column="2"
				Margin="10,15,30,10"/>
		
		<TextBox Grid.Row="1" Grid.ColumnSpan="3"
				 x:Name="text"
				 AcceptsReturn="True"
				 TextWrapping="Wrap"
				 FontSize="14"
				 Margin="10"/>
	</Grid>
</UserControl>
